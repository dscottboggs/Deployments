version: '2.0'
services:
  frontend:
    image: nextcloud:13.0
    expose:
      - '80'
    links:
      - database
    volumes:
      - ./mounts/webroot:/var/www/html
    networks:
      - nextcloud_db_network
  database:
    image: mariadb:latest
    restart: always
    volumes:
      - ./mounts/database:/var/lib/mysql
    environment:
      MYSQL_RANDOM_ROOT_PASSWORD: 1
      MYSQL_PASSWORD: {{ password }}
      MYSQL_DATABASE: nextcloud
      MYSQL_USER: nextcloud
      VIRTUAL_HOST: s.cloud.tams.tech
      LETSENCRYPT_HOST: s.cloud.tams.tech
      LETSENCRYPT_EMAIL: scott@tams.tech
    networks:
      - reverse_proxy_default
      - nextcloud_db_network
networks:
  reverse_proxy_default:
    external: true
  nextcloud_db_network:
    driver: default
